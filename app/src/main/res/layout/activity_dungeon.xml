<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dungeon_scene"
    tools:context=".DungeonActivity">

    <!-- Floor Info -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/floor"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/floorNumberTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/textView" />

    <!-- Enemy LL -->
    <LinearLayout
        android:id="@+id/enemyLL"
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:layout_marginTop="80dp"
        android:gravity="center"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/enemyHP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="0/0"
            android:textColor="@color/green"
            android:textSize="@dimen/characterHP" />

        <ImageView
            android:id="@+id/team1Image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/goblin" />


    </LinearLayout>

    <!-- Team members -->
    <LinearLayout
        android:id="@+id/team1LL"
        android:layout_width="80dp"
        android:layout_height="95dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/enemyLL"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.414">

        <TextView
            android:id="@+id/team1HP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="100/100"
            android:textColor="@color/green"
            android:textSize="@dimen/characterHP" />

        <ImageView
            android:id="@+id/team1Image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/macia" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/team2LL"
        android:layout_width="80dp"
        android:layout_height="95dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/enemyLL"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.674">

        <TextView
            android:id="@+id/team2HP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="200/200"
            android:textColor="@color/green"
            android:textSize="@dimen/characterHP" />

        <ImageView
            android:id="@+id/team2Image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/macia" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/team3LL"
        android:layout_width="80dp"
        android:layout_height="95dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/enemyLL"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.927">

        <TextView
            android:id="@+id/team3HP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="300/300"
            android:textColor="@color/green"
            android:textSize="@dimen/characterHP" />

        <ImageView
            android:id="@+id/team3Image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/macia" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/team4LL"
        android:layout_width="80dp"
        android:layout_height="95dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toEndOf="@+id/enemyLL"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.414">

        <TextView
            android:id="@+id/team4HP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="400/400"
            android:textColor="@color/green"
            android:textSize="@dimen/characterHP" />

        <ImageView
            android:id="@+id/team4Image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/macia" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/team5LL"
        android:layout_width="80dp"
        android:layout_height="95dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toEndOf="@+id/enemyLL"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.674">

        <TextView
            android:id="@+id/team5HP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="500/500"
            android:textColor="@color/green"
            android:textSize="@dimen/characterHP" />

        <ImageView
            android:id="@+id/team5Image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/macia" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/team6LL"
        android:layout_width="80dp"
        android:layout_height="95dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toEndOf="@+id/enemyLL"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.927">

        <TextView
            android:id="@+id/team6HP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="600/600"
            android:textColor="@color/green"
            android:textSize="@dimen/characterHP" />

        <ImageView
            android:id="@+id/team6Image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/macia" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>